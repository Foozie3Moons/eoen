extends ../profile/index

block profile
  .ui.container.page-content
    h1.ui.header Your Loan Detials
    form.ui.large.form#loan
      .ui
        .two.fields
          .field
            label(for='loanAmount') Loan Amount
            .ui.left.icon.input
              i.dollar.icon
              input#loanAmount(type='number', name='loanAmount', placeholder='Loan Amount')
          .field
            label(for='downPayment') Down Payment
            .ui.left.icon.input
              i.dollar.icon
              input#downPayment(type='number', name='downPayment', placeholder='Down Payment')
        .two.fields
          .field
            label(for='lifeOfLoan') Life of Loan
            .ui.left.icon.input
              i.calendar.icon
              input#lifeOfLoan(type='number', name='lifeOfLoan', placeholder='Life of Loan') 
          .field
            label(for='paymentsPerYear') Payments Per Year
            .ui.left.icon.input
              i.calendar.icon
              input#paymentsPerYear(type='number', name='paymentsPerYear', placeholder='Payments Per Year')
        .field
          label(for='apr') APR
          .ui.left.icon.input
            i.percent.icon
            input#apr(type='number', name='apr', placeholder='0.0')
        .ui.center.aligned.header
          .ui.huge.large.orange.submit.button(type='submit') Submit 
        include ../partials/alerts
      .ui.container.page-content
        h1.ui.header Let's View Your Loan
        .ui.grid#chart
      .ui.stackable.raised.segment.grid.center.aligned.middle.aligned
        .six.wide.column
          form.ui.large.form#view
            .field
              .ui.radio.checkbox
                input#stacked(type='radio', name='view' value='stacked')
                label(for='stacked') Stacked
            .field
              .ui.radio.checkbox
                input#grouped(type='radio', name='view', value='grouped' checked)
                label(for='grouped') Grouped
        .six.wide.column
          form.ui.large.form#createLoan(method='POST', action='/profile/loans')
            .field
                input#loanAmount(type='number', name='loanAmount', hidden)
            .field
                input#downPayment(type='number', name='downPayment', hidden)
            .field
                input#lifeOfLoan(type='number', name='lifeOfLoan', hidden) 
            .field
                input#paymentsPerYear(type='number', name='paymentsPerYear', hidden)
            .field
              input#apr(type='number', name='apr', hidden)
            .field
              label(for='name') Name Your Loan
              .ui.left.icon.input
                i.browser.icon
                input#loanName(type='text', name='name', placeholder='Loan Name')            
            input.ui.fluid.large.orange.submit.button(type='submit', value='Add Loan to List') 

  script(src="https://d3js.org/d3.v4.min.js" charset="utf-8")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/d3-legend/2.24.0/d3-legend.min.js")
  script(src="https://cdnjs.cloudflare.com/ajax/libs/numeral.js/2.0.6/numeral.min.js") 
  script(src='/js/demo.js')
  script(src='/js/renderChartOnClick.js')
  
